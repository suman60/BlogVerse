<div class="author">
    <h1 class="author__heading">Hello, Friends</h1>
    <p class="author__body">Welcome to the BlogVerse</p>
    <p class="author__body">Enjoy the Blogs</p>
</div>
<img src="\img\Blog-article-image-04-2.jpg" alt="Person looking out through window" class="hero-image" width="981" height="528">
<section class="articles">
    <h2 class="article_heading">Latest Post</h2>
    <ul class="article-ul">
        <% data.forEach(post=> { %>
            <li>
                <a href="/post/<%= post._id %>">
                    <span>
                        <%= post.title %>
                    </span>
                    <span class="article-list__date">
                        <%= post.createdAt.toDateString() %>
                    </span>
                </a>
            </li>
            <% }) %>


    </ul>
    <% if (nextPage!=null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
        <% } %>

</section>